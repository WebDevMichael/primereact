{
    "compilerOptions": {
        "experimentalDecorators": true,
        "baseUrl": ".",
        "outDir": "dist",
        "module": "esnext",
        "target": "es2017",
        "jsx": "react",
        "rootDir": "components",
        "lib": [
            "es6",
            "dom",
            "esnext.asynciterable",
            "es2017"
        ],
        "sourceMap": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "isolatedModules": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "stories"
    ]
}
